<div class="row mt-1">
    <div class="col-md-12">
        <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %> fade in"><%= message %>
            <a class="close" data-dismiss="alert">&#215;</a>
            </div>
        <% end %>
    </div>
</div>


<script>
window.setTimeout(function() { $(".alert").alert('close'); }, 4000);
</script>