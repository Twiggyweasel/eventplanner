<%= form_for(attendee) do |f| %>
  <% if attendee.errors.any? %>
    <%= render "shared/errors", errors: attendee.errors %>
  <% end %>
  
  
  <div class='col-md-6 offset-md-3 mt-1'>
      <div class='card card-block'>
          <div class='row my-1'>
              <div class='col-xs-12'>
                  <%= f.label :name %>
                  <%= f.text_field :name, class: "form-control" %>
              </div>
          </div>
          
          <div class='row my-1'>
              <div class='col-xs-12'>
                  <%= f.select :team_id, options_from_collection_for_select(@event.teams, 'id', 'name'), { } , class:'form-control' %>
              </div>
          </div>
          <div class='row my-1'>
              <div class='col-xs-12 mb-1'>
                  <%= f.submit 'Register', class: 'btn btn-success btn-square btn-block' %>
          </div>
              <div class='col-xs-12'>
                  <%= link_to 'Cancel', :back, class: 'btn btn-danger btn-square btn-block' %>
              </div>
          </div>
      </div>
  </div>
  
  
<% end %>  