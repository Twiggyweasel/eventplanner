<%= form_for(team) do |f| %>
  <% if team.errors.any? %>
    <%= render "shared/errors", errors: team.errors %>
  <% end %>
  
  <%= f.hidden_field :member_limit, :value => 999  %>
  <%= f.hidden_field :event_id, :value => event.id  %>
  <div class='col-md-6 offset-md-3 mt-1'>
      <div class='card card-block'>
          <div class='row my-1'>
              <div class='col-xs-12'>
                  <%= f.label :name, 'Team Name' %>
                  <%= f.text_field :name, class: "form-control" %>
              </div>
          </div>
          <h3>Attendee Info</h3>
          <%= f.fields_for :attendees do |ff| %>
          <div class='row my-1'>
              <div class='col-xs-12'>
              <%= ff.label :name, 'Attendee Name' %>
              <%= ff.text_field :name, class: 'form-control' %>
              <%= ff.hidden_field :team_id, :value => 1  %>
              </div>
          </div>    
          <% end %>
          <div class='row my-1'>
              <div class='col-xs-12 mb-1'>
                  <%= f.submit 'Create Team', class: 'btn btn-success btn-square btn-block' %>
          </div>
              <div class='col-xs-12'>
                  <%= link_to 'Cancel', :back, class: 'btn btn-danger btn-square btn-block' %>
              </div>
          </div>
      </div>
  </div>
  
  
<% end %>  