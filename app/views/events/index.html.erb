<p id="notice"><%= notice %></p>

<div class="row mt-1">
    <div class="col-xs-12 text-xs-center">
        <h1 class="display-3">Events Catalog</h1>
        <hr />
    </div>
</div>
<div class="row my-2">
    <div class="container">
        <div class="col-xs-4">
            <label for="type">Filter By Event Type</label>
            <select class="form-control" name="type">
                <option>Test</option>
                <option>Test</option>
            </select>
        </div>
        <div class="col-xs-4">
            <label for="company">Filter A Company</label>
            <select class="form-control" name="company">
                <option>Test</option>
                <option>Test</option>
            </select>
        </div>
        <div class="col-xs-4">
            <label for="sortby">Sort By</label>
            <select class="form-control" name="sortby">
                <option>Make a Selection</option>
                <option>Test</option>
            </select>
        </div>
    </div>
</div>
<div class="row">
    <% @events.each do |event| %>
    <div class="col-md-4" ng-repeat="event in events">
        <div class="card card-block item-square">
            <h6> <%= event.name %></h6>
            <p><%= event.venue_name %> <br /> <%= event.event_date.strftime("%A, %B %d %Y") %></p>
            <p><%= event.organization.name %></p>
            <%= link_to "View Event", event_path(event), class: "btn btn-square btn-primary" %>
        </div>
    </div>
    <% end %>
</div>




