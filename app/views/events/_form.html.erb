      <%= f.label :street %>
      <%= f.text_field :street, class: 'form-control' %>
    </div>
  </div>
  <div class='row'>
    <div class="col-xs-4">
      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>
    </div>
  
    <div class="col-xs-4">
      <%= f.label :state %>
      <%= f.text_field :state, class: 'form-control' %>
    </div>
  
    <div class="col-xs-4">
      <%= f.label :zip %>
      <%= f.text_field :zip, class: 'form-control' %>
    </div>
  </div>
  
  
  <div class='row'>
    <div class="col-xs-4">
      <%= f.label :fee_adult %>
      <%= f.text_field :fee_adult, class: 'form-control' %>
    </div>

    <div class="col-xs-4">
      <%= f.label :fee_child %>
      <%= f.text_field :fee_child, class: 'form-control' %>
    </div>
  
    <div class="col-xs-4">
      <%= f.label :fee_other %>
      <%= f.number_field :fee_other, class: 'form-control' %>
    </div>
  </div>
  <%= f.label :goal %>
  <%= f.number_field :goal, class: 'form_control' %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

