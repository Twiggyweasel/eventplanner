  <div class="field">
    <%= f.label :desc, "Event Summary" %>
    <%= f.text_area :desc, :class => "tinymce", :row => 350, :cols => 120 %>
  </div>
  <div class="row">
    <div class="col-xs-4">
      <%= f.label :event_date %>
      <%= f.date_field :event_date, class: "form-control" %>
